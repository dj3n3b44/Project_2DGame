<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="universite_paris8.iut.wad.sae_dev.Controleur.Menu">
   <children>
       <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="@../images/affichage/gameover.png" />
           </image>
       </ImageView>

       <AnchorPane>
           <Button layoutX="340.0" layoutY="450.0" mnemonicParsing="false" onAction="#lancerJeu" prefHeight="45.0" prefWidth="220.0"
                   style="-fx-border-color: #ff6f91;
                   -fx-background-color: linear-gradient(#ffe5ec, #ffc2d1);
                   -fx-text-fill: #b3003c;
                   -fx-background-radius: 12;
                   -fx-border-radius: 12;
                   -fx-font-size: 18px;
                   -fx-cursor: hand;">
               <effect>
                   <DropShadow color="#a6446f" offsetX="2" offsetY="2" radius="6.0" />
               </effect>
               <text>Rejouer</text>
           </Button>

           <Button layoutX="340.0" layoutY="510.0" mnemonicParsing="false" onAction="#quitterJeu" prefHeight="45.0" prefWidth="220.0"
                   style="-fx-border-color: #ff6f91;
                   -fx-background-color: linear-gradient(#ffe5ec, #ffc2d1);
                   -fx-text-fill: #b3003c;
                   -fx-background-radius: 12;
                   -fx-border-radius: 12;
                   -fx-font-size: 18px;
                   -fx-cursor: hand;">
               <effect>
                   <DropShadow color="#a6446f" offsetX="2" offsetY="2" radius="6.0" />
               </effect>
               <text>Quitter</text>
           </Button>
       </AnchorPane>


   </children>
</StackPane>
